<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme with NoActionBar -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Text appearance -->
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="textAppearanceBody1">@style/TextAppearance.AppCompat.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.AppCompat.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.AppCompat.Button</item>
    </style>
</resources>